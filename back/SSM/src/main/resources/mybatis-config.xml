	<plugins>
		<plugin interceptor="com.weixin.plugin.PagePlugin">
			<property name="dialect" value="mysql" />
			<property name="pageSqlId" value=".*listPage.*" />
		</plugin>
	</plugins> 
	-->
	
</configuration>
